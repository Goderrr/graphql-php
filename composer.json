{
    "name": "andi/graphql-php",
    "description": "GraphQL library for PHP",
    "type": "library",
    "require": {
        "php": "^8.1",
        "webonyx/graphql-php": "^15.4",
        "spiral/attributes": "^3.1",
        "phpdocumentor/reflection-docblock": "^5.3",
        "spiral/core": "^3.7"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Andrey N. Mokhov",
            "email": "github@mokhov.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Andi\\GraphQL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Andi\\Tests\\GraphQL\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "mockery/mockery": "^1.6"
    }
}
