{
    "name": "andi-lab/graphql-php",
    "description": "GraphQL library for PHP",
    "keywords": [
        "andi-lab",
        "graphql",
        "graphql-php"
    ],
    "type": "library",
    "require": {
        "php": "^8.1",
        "webonyx/graphql-php": "^15.4",
        "spiral/attributes": "^3.1",
        "phpdocumentor/reflection-docblock": "^5.3",
        "spiral/core": "^3.7"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Andrey N. Mokhov",
            "email": "github@mokhov.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Andi\\GraphQL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Andi\\Tests\\GraphQL\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "mockery/mockery": "^1.6",
        "vimeo/psalm": "^5.17"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "psalm": "vendor/bin/psalm --config=psalm.xml.dist ./src"
    },
    "config": {
        "sort-packages": true
    }
}
